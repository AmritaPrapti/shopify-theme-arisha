{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding .image_wrapper_app {
    height: var(--mobile-height, 600px);
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .section-{{ section.id }}-padding .image_wrapper_app img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }}-padding .image_wrapper_app {
      height: var(--desktop-height, 700px);
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding {% if section.settings.include_margins %} page-width{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="app-block-wrapper">
    {%- for block in section.blocks -%}
      {% if block.type == 'image' %}
        <div class="image_wrapper_app" style="{% if block.settings.custom_height == true %} --desktop-height: {{ block.settings.height }}px; --mobile-height: {{ block.settings.height_mobile }}px; {% endif %} border-radius: {{ block.settings.corner_radius }}px;">
          {%- if block.settings.image != blank -%}
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- assign fetch_priority = 'auto' -%}
            {%- capture sizes -%}
                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
              {%- endcapture -%}
            {{
              block.settings.image
              | image_url: width: 1500
              | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority, classes: 'app-block-image'
            }}
          {%- else -%}
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {% else %}
        {% render block %}
      {% endif %}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    },
    {
      "type": "header",
      "content": "Spacing settings",
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.all.padding.padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.all.padding.padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "checkbox",
          "id": "custom_height",
          "label": "Custom Height",
          "default": false
        },
        {
          "type": "range",
          "id": "height",
          "min": 300,
          "max": 800,
          "step": 10,
          "unit": "px",
          "label": "Height",
          "default": 400,
          "visible_if": "{{ block.settings.custom_height == true }}"
        },
        {
          "type": "range",
          "id": "height_mobile",
          "min": 300,
          "max": 800,
          "step": 10,
          "unit": "px",
          "label": "Height on Mobile",
          "default": 400,
          "visible_if": "{{ block.settings.custom_height == true }}"
        },
        {
          "type": "range",
          "id": "corner_radius",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Corner Radius",
          "default": 4
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}
